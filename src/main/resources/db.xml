    <bean id="ageCategoryDao" class="model.utility.CommonDaoJpa">
        <constructor-arg>
            <value>model.entity.AgeCategory</value>
        </constructor-arg>
        <property name="sessionFactory">
            <ref bean="sessionFactory"/>
        </property>
    </bean>
    <bean id="countryDao" class="model.utility.CommonDaoJpa">
        <constructor-arg>
            <value>model.entity.Country</value>
        </constructor-arg>
        <property name="sessionFactory">
            <ref bean="sessionFactory"/>
        </property>
    </bean>

